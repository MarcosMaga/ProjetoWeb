<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inbox (<%= posts.length %>)</title>
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/inbox.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <% if(user) { %>
        <%- include(`../components/menu`) %>
    <% } %>
        <div class="content">
            <h1>Inbox (<%= posts.length %>)</h1>
            <hr>
            <div class="content-wrapper">
                <% posts.forEach(post => { %>
                    <div class="post-area">
                        <div class="post-info">
                            <img src="<%= post.creator.picture %>" alt="">
                            <h2><%= post.creator.username %></h2>
                            <p><%= helpers.compareTime(post.createdOn) %></p>
                        </div>
                        <p><%= post.textCreator %></p>
                        <form action="/post" method="PATCH">
                            <input type="text" name="textReceiver" placeholder="Escreva um comentÃ¡rio">
                            <hr>
                            <button type="submit">
                                Aceitar <i class="fa fa-check" aria-hidden="true"></i>
                            </button>
                            <a href="/post/delete/<%=post.id%>">Recusar <i class="fa fa-trash-o" aria-hidden="true"></i></a>
                        </form>
                    </div>
                <% }) %>
            </div>
        </div>
</body>
</html>