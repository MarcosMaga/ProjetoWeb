<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pesquisar</title>
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/search.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <% if(user) { %>
        <div class="sidebar">
            <ul>
                <li><i class="fa fa-home" aria-hidden="true"></i><a href="#">Página Inicial</a></li>
                <li><i class="fa fa-search" aria-hidden="true"></i><a href="/search">Pesquisar</a></li>
                <li><i class="fa fa-envelope-o" aria-hidden="true"></i><a href="#">Caixa de Entrada</a></li>
                <li><i class="fa fa-user-circle-o" aria-hidden="true"></i><a
                        href="<%= helpers.baseUrl(`perfil/${user.username}`)%>">Perfil</a></li>
                <li><i class="fa fa-sign-out" aria-hidden="true"></i></i><a href="/logout">Sair</a></li>
            </ul>
        </div>
        <% } %>
        <div class="content">
            <h1>Pesquisar</h1>
            <form action="<%= helpers.baseUrl(`search`)%>" method="GET">
                <div id="search-form">
                    <input type="search" name="value" value="<%=value%>">
                    <button type="submit">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </button>   
                </div>
            </form>
            <hr>
            <div class="users-list">
                <% if(!users) { %>
                    <p>Nenhum usuário encontrado.</p>
                <% } else { 
                    users.forEach((u) => { 
                        if(u.id != user.id){ %>
                        <div class="user" onclick="goToPerfil('<%= u.username%>')">
                            <img src="<%= u.picture %>" alt="">
                            <div class="user-text">
                                <p><strong><%= u.username%></strong></p>
                                <p><%= u.name %></p>
                            </div>
                        </div>
                   <% }}) 
                 } %>
            </div>
        </div>
</body>
<script>
    function goToPerfil(event){
        window.location.href = '/perfil/' + event;
    }
</script>
</html>