generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  username String @unique
  email String @unique
  password String
  bio String @default("")
  picture String @default("/img/standard-pic.png")
  ip String
  createdOn DateTime @default(now())
  followings Follow[] @relation("Followers")
  followers Follow[] @relation("Followings")

  createdPost Post[] @relation("Creator")
  receivedPost Post[] @relation("Receiver") 

  @@map("users")
}

model Follow{
  followerId Int
  follower User @relation("Followers", fields: [followerId], references: [id])
  followingId Int
  following User @relation("Followings", fields: [followingId], references: [id] )
  startAt DateTime @default(now())
  @@id([followerId, followingId])

  @@map("follows")
}

model Post{
  id Int @id @default(autoincrement())
  creator User @relation("Creator", fields: [creatorId], references: [id])
  creatorId Int
  receiver User @relation("Receiver", fields:[receiverId], references: [id])
  receiverId Int
  textCreator String
  textReceiver String
  approved Boolean
  createdOn DateTime @default(now())

  @@map("posts")
}
